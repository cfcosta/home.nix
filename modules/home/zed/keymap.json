[
  {
    "context": "Editor && vim_mode == normal && !menu",
    "bindings": {
      "space /": "pane::DeploySearch",
      "space ?": ["pane::DeploySearch", { "replace_enabled": true }],
      "space a a": "assistant::InlineAssist",
      "space b b": "tab_switcher::Toggle",
      "space c a": "editor::ToggleCodeActions",
      "space c r": "editor::Rename",
      "space f f": "file_finder::Toggle",
      "space f s": "project_symbols::Toggle",
      "space h": ["workspace::ActivatePaneInDirection", "Left"],
      "space j": ["workspace::ActivatePaneInDirection", "Down"],
      "space k": ["workspace::ActivatePaneInDirection", "Up"],
      "space l": ["workspace::ActivatePaneInDirection", "Right"],
      "space o t": "workspace::ToggleBottomDock",
      "space o T": "workspace::NewCenterTerminal",
      "space o c": "workspace::CloseAllDocks",
      "space o C": "collab_panel::ToggleFocus",
      "space o p": "workspace::ToggleLeftDock",
      "space o P": "project_panel::ToggleFocus",
      "space space": "file_finder::Toggle",
      "space w c": "pane::CloseActiveItem",
      "space w s": "pane::SplitDown",
      "space w v": "pane::SplitRight",
      "space x w": "diagnostics::Deploy",
      "space z c": "zed::OpenSettings",
      "space z k": "zed::OpenKeymap",
      "space z t": "theme_selector::Toggle",
      "space z x": "zed::Extensions"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": [
        "vim::PushOperator",
        {
          "AddSurrounds": {}
        }
      ]
    }
  },
  // Project Panel config
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      ":": "command_palette::Toggle",
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename",
      "space  o p": "workspace::ToggleLeftDock",
      "shift-g": "menu::SelectLast",
      "g g": "menu::SelectFirst",
      "tab": "project_panel::ExpandSelectedEntry",
      "-": "project_panel::SelectParent",
      "enter": "project_panel::OpenPermanent",
      "j": "menu::SelectNext",
      "k": "menu::SelectPrev",
      "h": "project_panel::CollapseSelectedEntry",
      "o": "project_panel::OpenPermanent",
      "escape": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "space o t": "workspace::ToggleBottomDock"
    }
  }
]
